<aside class="back-index-aside">
  <a class="logo"></a>
  <ul class="first-ul">
    <% if current_logininfo.is_employee? %>
        <li>
          <a class="<%= @active_left_aside=='students' ? 'active' : '' %>" href='<%= students_path %>'>学生信息</a>
        </li>
        <li>
          <a class="<%= @active_left_aside=='courses' ? 'active' : '' %>" href='<%= courses_path %>'>课程信息</a>
        </li>
    <% end %>
    <% if current_logininfo.is_teacher? || current_logininfo.is_student? %>
        <li>
          <a class="<%= @active_left_aside=='homepage' ? 'active' : '' %>" href='<%= current_logininfo.is_teacher? ? teachers_path : student_index_path %>'>我的主页</a>
        </li>
    <% end %>
    <% if current_logininfo.is_student? %>
        <li>
          <a class="<%= @active_left_aside=='achievements' ? 'active' : '' %>" href="/student/<%= current_logininfo.student.id %>">我的成就</a>
        </li>
    <% end %>
  </ul>
  <ul class="second-ul" id="main-navigator-bottom">
    <% if current_logininfo.is_admin? %>
        <li>
          <a href='<%= settings_path %>'> <i class="settings icon" data-content="全局配置"></i></a>
        </li>
    <% end %>
    <li>
      <a href="<%= logininfos_path%>"> <i class="smile icon" data-content="我的账户"></i></a>
    </li>
    <li>
      <a> <i class="mail outline icon" data-content="发送信息"></i></a>
    </li>
    <li>
      <a href="/logininfo_sessions/destroy"> <i class="sign out icon" data-content="退出账户"></i></a>
    </li>
  </ul>
</aside>
