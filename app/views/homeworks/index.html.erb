<h1>Listing homeworks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Deadline</th>
    <th>Content</th>
    <th>Teacher course</th>
    <th>Unmark number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @homeworks.each do |homework| %>
  <tr>
    <td><%= homework.title %></td>
    <td><%= homework.deadline %></td>
    <td><%= homework.content %></td>
    <td><%= homework.teacher_course %></td>
    <td><%= homework.unmark_number %></td>
    <td><%= link_to 'Show', homework %></td>
    <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
    <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

