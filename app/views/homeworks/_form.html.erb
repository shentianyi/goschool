<div class="homework-post-add" id="homework-post-add">
     <div class="inner">
          <i class="icon remove"></i>
          <p>
               新建作业
          </p>
          <div class="content">
               <label>作业标题</label>
               <div class="ui input fluid ">
                    <input  type="text" name="title" class="homework-input" placeholder="作业标题..." />
               </div>
               <label>作业内容</label>
               <textarea placeholder="作业描述..." name='content' id="content" class="ckeditor homework-input" ></textarea>
               <label>截止日期</label>
               <div class="ui input focus fluid ">
                    <input placeholder="截止日期..." type="text" name="deadline" readonly id="homework-deadline" class="homework-input" >
               </div>
               <div class="upload-file">
                 <%=render 'shares/file_upload'%>
               </div>
          </div>

          <div id="create-homework-button" class="ui button red mini">
               新建
          </div>
     </div>
</div>
