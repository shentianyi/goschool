<div class="homework-info">
     <h3><i class="empty flag icon"></i> <%= @homework.title%></h3>
     <p>
          <%= @homework.content%>
     </p>
     <label>截止日期:<span><%= @homework.deadline_display%></span></label>
     <label>当前状态:<span><%= @homework.status_display%></span></label>
     <p>
          <%@homework.attachments.each do |attach|%>
          <a href="<%= attach.path%>" target="blank"> <%= attach.name%></a>||
          <%end%>
     </p>
</div>