  <p><%= @comment.commenter.name %></p>
  <p><%= @comment.comment_time %></p>
  <% if @comment.who_answer %>
      <label class="teacher-answer"><% @comment.who_answer %></label>
  <% end %>

  <p><%= @comment.content %></p>
</div>