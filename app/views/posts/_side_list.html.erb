<div class="left">
  <% if @posts %>
      <% @menus.each do |menu| %>
          <div class="ui accordion" id="accordion">
            <div class="title">
              <i class="dropdown icon"></i>
              <a href="#" type="<%= menu.value %>" class="post-menu-a <%= 'pin' if menu.is_pin %>" pin="<%= menu.is_pin %>"><%= menu.display %><%= ':>>>>' if menu.is_pin %></a>
            </div>
            <div class="content">
              <% if @menu_type==menu.value %>
                  <%= render 'list_item' %>
              <% end %>
            </div>
          </div>
      <% end %>
  <% end %>
</div>

