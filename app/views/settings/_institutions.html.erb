
<div class="admin-operate" name="institutions" id="admin-operate" >
     <p>
          已存在的机构
     </p>
     <label><i class="icon info"></i>双击单项编辑</label>
     <table class="ui column table segment celled" id="admin-operate-table">
          <thead>
               <tr>
                    <th class="three wide">机构名称</th>
                    <th class="seven wide ">地址</th>
                    <th class="three wide ">电话</th>
                    <th class="three wide "></th>
               </tr>
          </thead>
          <tfoot>
               <tr>
                    <th colspan="3"></th>
                    <th >
                    <div class="ui teal small labeled icon button add-button" id="admin-operate-add">
                         <i class="add icon"></i> 添加机构
                    </div></th>
               </tr>
          </tfoot>
          <tbody>
               <%@institutions.each_with_index do |institution,i|%>
               <tr id="<%=institution.id%>">
                    <td post='name'><%=institution.name%></td>
                    <td post='address'><%=institution.address%></td>
                    <td post='tel'><%=institution.tel%></td>
                    <td><i class="trash icon" affect="<%=institution.id%>"></i></td>
               </tr>
               <%end%>
          </tbody>
     </table>
</div>