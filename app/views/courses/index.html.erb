<h1>Listing courses</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Name</th>
    <th>Description</th>
    <th>Lesson</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Expect number</th>
    <th>Actual number</th>
    <th>Sub number</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.type %></td>
    <td><%= course.name %></td>
    <td><%= course.description %></td>
    <td><%= course.lesson %></td>
    <td><%= course.start_date %></td>
    <td><%= course.end_date %></td>
    <td><%= course.expect_number %></td>
    <td><%= course.actual_number %></td>
    <td><%= course.sub_number %></td>
    <td><%= course.user %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

