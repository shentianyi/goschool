<!--编辑学生信息-->
<% if @student %>
<div class="inner">
  <i class="remove icon"></i>
  <p>新建学生</p>
  <div class="left-part">
    <div class="portrait">
      <img class="ui circular image " src="<%= student.image_url%>">
    </div>
    <div class="ui left icon input">
      <input placeholder="<%= student.name%>" type="text">
      <i class="user icon"></i>
    </div>
    <div class="sex stop">
      <div class="ui radio checkbox">
        <input name="sex" <% if student.is_male? %>checked="checked" <% end %>type="radio">
        <label>男</label>
      </div>
      <div class="ui radio checkbox">
        <input name="sex" <% if !student.is_male? %>checked="checked" <% end %> type="radio">
        <label>女</label>
      </div>
    </div>
    <div class="ui left icon input calendar">
      <input placeholder="<%= student.birthday%>" type="text" readonly id="born-date">
      <i class="calendar icon"></i>
    </div>
    <div class="ui left icon input">
      <input placeholder="<%= student.school%>" type="text">
      <i class="building icon"></i>
    </div>
    <div class="ui left icon input calendar">
      <input placeholder="<%= student.graduation%>" type="text" readonly id="graduation-date">
      <i class="empty bookmark icon"></i>
    </div>
  </div>
  <div class="right-part">
    <div class="ui left icon input">
      <input placeholder="<%= student.email %>" type="text">
      <i class="mail outline icon"></i>
    </div>
    <div class="ui left icon input">
      <input placeholder="<%= student.phone %>" type="text">
      <i class="phone icon"></i>
    </div>
    <div class="ui left icon input">
      <input placeholder="<%= student.address %>" type="text">
      <i class="home icon"></i>
    </div>
    <div class="ui left icon input">
      <input placeholder="<%= student.guardian %> type="text">
      <i class="male icon"></i>
    </div>
    <div class="ui left icon input">
      <input placeholder="<%= student.guardian_phone %>" type="text">
      <i class="mobile icon"></i>
    </div>
    <div class="ui left icon input specialInput labelForm autoComplete">
      <ul>
        <li><input type='text' placeholder="标签..." id="autoC2"/></li>
      </ul>
      <i class="tag icon stop"></i>
    </div>
    <div class="ui left icon input autoComplete">
      <input placeholder="推荐人..." id="autoC3" type="text">
      <i class="smile icon"></i>
    </div>
    <div class="ui red button">
      添加
    </div>
  </div>
</div>
<% end %>
