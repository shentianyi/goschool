<h1>Listing sub_courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent name</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sub_courses.each do |sub_course| %>
  <tr>
    <td><%= sub_course.name %></td>
    <td><%= sub_course.parent_name %></td>
    <td><%= sub_course.course %></td>
    <td><%= link_to 'Show', sub_course %></td>
    <td><%= link_to 'Edit', edit_sub_course_path(sub_course) %></td>
    <td><%= link_to 'Destroy', sub_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

